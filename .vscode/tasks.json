{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Emulator (headless)",
      "type": "shell",
      "command": "./scripts/start-emulator-headless.sh --force --timeout-secs 600",
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Start Next Dev",
      "type": "shell",
      "command": "npm run dev",
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "^.*$",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting",
            "endsPattern": "Ready"
          }
        }
      ],
      "isBackground": true
    },
    {
      "label": "Start App+Emulator",
      "dependsOn": ["Start Emulator (headless)", "Start Next Dev"],
      "runOptions": {
        "runOn": "default"
      },
      "type": "shell",
      "command": "echo 'Starting emulator and Next dev'"
    }
  ]
}
